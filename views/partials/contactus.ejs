<section id="contact" class="contact">
  <div class="container" data-aos="fade-up">
    <div class="section-title">
      <h2 style="color: #211d3c">Get in Touch</h2>
      <p>
        We value your input and look forward to connecting with you. Feel free to reach out for any inquiries, feedback, or collaborations. Our team is here to assist you on your journey to success.
      </p>
    </div>

    <div class="row">
      <div class="col-lg-5 d-flex align-items-stretch">
        <div class="info">
          <div class="address">
            <i class="bi bi-geo-alt"></i>
            <h4>Location:</h4>
            <p>6-1-276/A/1, Chidanandam Colony, Padmaraonagar, Hyderabad, Telangana 500025.</p>
          </div>

          <div class="email">
            <i class="bi bi-envelope"></i>
            <h4>Email:</h4>
            <p>
              ramakanth@rk-exim.com, <br />
              ramakanth@rk-exim.in
            </p>
          </div>

          <div class="phone">
            <i class="bi bi-phone"></i>
            <h4>Call:</h4>
            <p>+91 9704191113 <br />+91 7989721899</p>
          </div>

          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d30453.759187016196!2d78.47409984486815!3d17.42522480331939!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb99855cf0c7d1%3A0x7c6831d1f1e307cd!2sPadmarao%20Nagar%2C%20Hyderabad%2C%20Telangana!5e0!3m2!1sen!2sin!4v1712251867437!5m2!1sen!2sin"
            width="300"
            height="300"
            style="border: 0"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>

      <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
        <form action="/contactus/submit" method="post" role="form" class="email-form" id="contactForm">
          <div class="row">
            <div class="form-group col-md-6">
              <label for="name">Your Name</label>
              <input type="text" name="name" class="form-control" id="name" required />
            </div>
            <div class="form-group col-md-6">
              <label for="name">Your Email</label>
              <input type="email" class="form-control" name="email" id="email" required />
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-6">
              <label for="name">Mobile Number</label>
              <input type="number" class="form-control" name="mobile" id="mobile" required />
            </div>

            <div class="form-group col-md-6">
              <label for="name">Product interested</label>
              <input type="text" class="form-control" name="product" id="product" required />
            </div>
          </div>

          <div class="form-group">
            <label for="name">Message</label>
            <textarea class="form-control" name="message" id="message" rows="10" required></textarea>
          </div>

          <div id="spinner" style="display: flex; justify-content: center"></div>

          <div id="successMessage" style="display: flex; justify-content: center; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: green; padding: 5px 0px"></div>

          <div id="failureMessage" style="display: flex; justify-content: center; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: red; padding: 5px 0px"></div>

          <div class="text-center">
            <button type="submit">Send Message</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
